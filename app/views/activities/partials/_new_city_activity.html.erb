<div class="container">
  <div class="row">
    <div class="form-group">
      <%= form_for [:city, @activity], url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
        <div class="form-group">
          <%= f.label :name%>
        </div>
        <div class="">
          <%= f.text_field :name, class: "form-control"%>
        </div>
        <div class="form-group">
          <div class="">
            <%= f.label :description%>
          </div>
          <div class="">
            <%= f.text_area :description, class: "form-control"%>
          </div>
        </div>
        <%= f.submit "Crear", class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row blank_space"> </div>

  <div class="row">
    <div class="col-md-4">
      <h1> <%= City.find(@city).name %></h1>
      <p> summary data </p>
    </div>
    <div class="col-md-2 col-md-offset-2" style="border: red">

    </div>
    <div class="col-md-4">
      <h1>last table</h1>
    </div>
  </div>

  <div class="row blank_space"> </div>

  <div class="row">
    <div class="form-group">
      <%= form_for [:quote, Activity.new], url: {:controller => 'activities', action: "add_to_quote"}, html: {class: "nifty_form"} do |f| %>
        <%= f.hidden_field :city, value: @city %>
        <div class="col-sm-6">
          <%=label_tag(:activity, "Actividad")%>
          <%= f.collection_select :id, Activity.all.where(city_id: @city), :id, :name, class: "form-control"%>
        </div>
        <%= f.submit "Aniadir una actividad", class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="row blank_space"> </div>

  <div class="row">
    <div class="col-md-12" style="border: red">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">actividad</th>
            <th>actualizar precio</th>
            <th>borrar actividad</th>
          </tr>
        </thead>
        <tbody>
          <% Quote.find(@quote).activities.each do |activity| %>
            <tr>
              <td>  <%= activity.name %> </td>
              <td>  yes </td>
              <td>  no </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row blank_space"> </div>
</div>

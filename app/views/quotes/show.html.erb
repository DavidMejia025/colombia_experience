<div class="container">
  <div class="row blank_space"> </div>

  <div class="row">
    <div class="col-md-6">
      <div class="">
        <h1> Cliente: <%= Quote.find(@quote).name %></h1>
        <h3> TRM: <%= Quote.find(@quote).trm %></h3>
        <h3> Margen de ganancia: <%= Quote.find(@quote).margin %></h3>
      </div>
      <div class="">
        <h2> Costo total: <%= Quote.find(@quote).total %> </h2>
        <h3> Costo total por persona: <%= Quote.find(@quote).total_per_person %></h3>
      </div>
      <div class="">
        <%= button_to "Calcular precios", { action: "cost" }, form_class: "btn btn-light" %>
      </div>
    </div>
    <div class="col-md-6">
      <h2> Costo total: <%= Quote.find(@quote).total %></h2>
      <h3> Costo total por persona: <%= Quote.find(@quote).total_per_person %></h3>
    </div>
  </div>

  <div class="row blank_space"> </div>

  <div class="row">
    <div class="col-md-12" style="border: red">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">actividad</th>
            <th>detalles </th>
            <th>costo total</th>
            <th>costo total por persona</th>
            <th>actualizar precio</th>
            <th>borrar actividad</th>
          </tr>
        </thead>
        <tbody>s
          <% Quote.find(@quote).activities.each do |activity| %>
            <tr style="background: rgb(51,255,227)">
              <td>  <%= activity.name %> </td>
              <td>  ver mas </td>
              <td>  <%= activity.total %> </td>
              <td>  <%= activity.total_per_person %> </td>
              <td>  <%= button_to "Calcular precios", { controller: 'activities', action: "calculate_cost", activity: activity }, form_class: "btn btn-light" %> </td>
              <td>  no </td>
            </tr>
              <% activity.variable_costs.each do |variable_cost| %>
                <tr>
                    <td>  Capacity: <%= variable_cost.capacity %> </td>
                    <td>  Cost: <%= variable_cost.cost %> </td>
                    <td>  Checked: <%= variable_cost.checked %> </td>
                    <td>  "" </td>
                </tr>
              <% end%>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row blank_space"> </div>

  <div class="row">
    <%= link_to "volver a ver todas las cotizaciones", quotes_path %>
  </div>
</div>

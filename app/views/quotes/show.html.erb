<div class="container">
  <div class="row blank_space"> </div>

  <div class="row">
    <div class="col-md-6">
      <div class="">
        <h1> Cliente: <%= @quote.client %></h1>
        <h3> TRM: <%= @quote.trm %></h3>
        <h3> Margen de ganancia: <%= @quote.margin %></h3>
        <h3> Moneda: <%= @quote.currency %></h3>
        <h3> Costo total: <%= @quote.cost %> </h3>
        <h3> Costo por persona: <%= @quote.cost_per_person %> </h3>
      </div>
    </div>
    <div class="col-md-6">
      <% @quote.cities.distinct.each do |city| %>
        <h5> <%= link_to "Modificar #{city.name}", quote_city_path(@quote, city) %> </h5>
      <% end %>
    </div>
  </div>

  <div class="row blank_space"> </div>

  <div class="row">
    <div class="col-md-8" style="border: red">
      <div class="row">
        <%= link_to "aniadir servicio:", new_quote_service_path(@quote)  %>
      </div>

      <div class="row">
        <%= link_to "aniadir tour:", new_quote_tour_path(@quote) %>
      </div>
    </div>

    <div class="col-md-4" style="border: red">
      <%= link_to "Calcular precio de la cotizacion:", "/quotes/#{@quote.id}/calculate_cost" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12" style="border: red">
      <% if @quote.tours.length > 0 %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th > Ciudad </th>
              <th > Nombre del tour </th>
              <th>  Descartar </th>
              <th> yes</th>
            </tr>
          </thead>
          <tbody>
            <% @quote.tours.each do |tour| %>
              <tr>
                <td>  <%= tour.city.name %></td>
                <td>  <%= link_to tour.name, quote_tour_services_path("#{@quote.id}, #{tour.id}") %></td>
                <td>
                    <%= link_to quote_remove_tour_path("#{@quote.id}, #{tour.id}"), class: "btn btn-default", data: { confirm: 'Are you sure?' }, method: :delete do %>
                        <i class="glyphicon glyphicon-minus"></i>
                    <% end %>
                </td>
                <td>  yes </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12" style="border: red">
      <table class="table table-striped">
        <thead>
          <tr>
            <th > Ciudad </th>
            <th > Categoria </th>
            <th> Proveedor </th>
            <th> Servicio</th>
          </tr>
        </thead>
        <tbody>
          <% @services.each do |service| %>
            <tr>
              <td>  <%= service.city.name %></td>
              <td>  <%= service.vendor.category.name %></td>
              <td>  <%= service.vendor.name %> </td>
              <td>  <%= link_to service.name, quote_service_path(@quote, service) %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <%= link_to "volver a ver todas las cotizaciones", quotes_path %>
  </div>
</div>
